<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <TextView
        android:id="@+id/tv_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建联系人"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/liner_add_name"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@+id/tv_add_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_background2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="姓名："
            android:textColor="@color/black"
            android:textSize="24dp"/>
        <EditText
            android:id="@+id/et_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="                        "/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_add_number"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@+id/liner_add_name"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_background2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="电话："
            android:textColor="@color/black"
            android:textSize="24dp"/>
        <EditText
            android:id="@+id/et_add_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="phone"
            android:hint="                                   "/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_add_address"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@+id/liner_add_number"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_background2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="地址："
            android:textColor="@color/black"
            android:textSize="24dp"/>
        <EditText
            android:id="@+id/et_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="                                   "/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_add_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="提交"
        android:layout_below="@id/liner_add_address"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#1e90ff"/>
</RelativeLayout>