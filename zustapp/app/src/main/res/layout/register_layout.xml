<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_green">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zust_logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="用户注册"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/type_back"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/et_reg_type"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:hint="                                     "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_back"
        android:layout_below="@+id/img_main_logo"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/et_reg_username"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:hint="                                     "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_main_logo"
        android:background="@drawable/password_back"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:hint="                                     "/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_reg_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_shape"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textSize="23dp"/>
</LinearLayout>